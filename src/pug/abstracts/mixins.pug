mixin popularCar(name, photo, price)
   article.popular-car 
      h3.popular-car__name #{name}
      img.popular-car__photo(src=`assets/img/${photo}`, alt=name)
      h4.popular-car__price $#{price}
      button.btn.btn--block.btn--white.popular-car__btn see more

mixin form 
   form.form 
      input.form__control(type="text" placeholder="Your Full Name" required)
      input.form__control(type="email" placeholder="Your email" required)
      textarea.form__control(placeholder="Enter Message")
      btn.btn.btn--block.btn--white.form__btn Submit
